<p id="notice"><%= notice %></p>
<%= render "menu" %>
<h1 class='text-center'>Eventos</h1>

<table class= 'table table-bordered table-hover table-dark'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Categoria</th>
      <th>Lugar</th>
      <th>Direccion</th>
      <th>Fecha inicio</th>
      <th>Fecha fin</th>
      <th>Modalidad</th>
      <th colspan="3" class='text-center'>Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.nombre %></td>
        <td><%= event.categoria %></td>
        <td><%= event.lugar %></td>
        <td><%= event.direccion %></td>
        <td><%= event.fecha_inicio %></td>
        <td><%= event.fecha_fin %></td>
        <td><%= event.modalidad %></td>
        <td><%= link_to 'Consultar', event , class: "btn btn-success"%></td>
        <td><%= link_to 'Modificar', edit_event_path(event) , class: "btn btn-warning"%></td>
        <td><%= link_to 'Eliminar', event, method: :delete, class: "btn btn-danger", 
                  data: { confirm: 'EstÃ¡ seguro que desea eliminar el evento seleccionado?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
